!!! XML
!!!
%html
  %head
    %title Geigercrowd
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #head
      .container
        #navigation
          %ul
            %li= link_to t('samples.index.title'), samples_path
            %li= link_to t('instruments.index.title'), instruments_path
    #message
      - if alert
        .alert= alert
      - elsif notice
        .notice= notice
    #content
      = yield
